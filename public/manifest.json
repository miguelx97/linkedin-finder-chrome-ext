{
  "manifest_version": 3,
  "name": "Linkedin Finder",
  "version": "1.0.0",
  "description": "Highlights keywords on LinkedIn pages to help you identify relevant profiles and content.",
  "icons": {
    "48": "images/linkedin_finder_icon-48.png",
    "128": "images/linkedin_finder_icon-128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content-script.js"],
      "css": ["highlight-styles.css"]
    }
  ]
}
